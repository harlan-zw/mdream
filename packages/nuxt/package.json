{
  "name": "@mdream/nuxt",
  "type": "module",
  "version": "0.9.1",
  "packageManager": "pnpm@10.14.0",
  "description": "Nuxt module for converting HTML pages to Markdown using mdream",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/types.d.mts",
      "import": "./dist/module.mjs"
    }
  },
  "main": "./dist/module.mjs",
  "types": "./dist/types.d.mts",
  "typesVersions": {
    "*": {
      ".": [
        "./dist/types.d.mts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run dev:prepare && nuxt-module-build build",
    "dev": "nuxi dev playground",
    "dev:build": "nuxi build playground",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare playground",
    "prepare:fixtures": "nuxi prepare test/fixtures/basic",
    "release": "pnpm build && bumpp && pnpm -r publish",
    "test": "pnpm prepare:fixtures && vitest run",
    "test:watch": "vitest watch",
    "test:attw": "attw --pack",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@nuxt/kit": "^4.0.3",
    "consola": "^3.4.2",
    "defu": "^6.1.4",
    "mdream": "workspace:*",
    "nuxt-site-config": "^3.2.2",
    "pathe": "^2.0.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.1",
    "@arethetypeswrong/cli": "^0.18.2",
    "@nuxt/devtools": "latest",
    "@nuxt/module-builder": "^1.0.2",
    "@nuxt/schema": "^4.0.3",
    "@nuxt/test-utils": "^3.19.2",
    "@types/node": "latest",
    "bumpp": "^10.2.3",
    "changelogen": "^0.6.2",
    "eslint": "^9.33.0",
    "nuxt": "^4.0.3",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
