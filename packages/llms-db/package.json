{
  "name": "@mdream/llms-db",
  "type": "module",
  "version": "0.12.2",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/harlan-zw/mdream",
    "directory": "packages/llms-db"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    },
    "./cli": {
      "types": "./dist/cli.d.mts",
      "import": "./dist/cli.mjs"
    }
  },
  "bin": {
    "mdream-db": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "obuild",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:attw": "attw --pack .",
    "run": "node --env-file=.env ./dist/cli.mjs run",
    "db:generate": "node --env-file=.env drizzle-kit generate",
    "db:migrate": "node --env-file=.env drizzle-kit migrate",
    "db:studio": "node --env-file=.env drizzle-kit studio",
    "prepack": "pnpm run build"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.901.0",
    "@clack/prompts": "^0.11.0",
    "@libsql/client": "^0.15.15",
    "@mdream/crawl": "workspace:*",
    "better-sqlite3": "^12.4.1",
    "drizzle-orm": "^0.44.5",
    "pathe": "^2.0.3",
    "ufo": "^1.6.1",
    "unstorage": "^1.17.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "drizzle-kit": "^0.31.5"
  }
}
