{
  "name": "@mdream/llms-db",
  "type": "module",
  "version": "0.16.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/harlan-zw/mdream",
    "directory": "packages/llms-db"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    },
    "./cli": {
      "types": "./dist/cli.d.mts",
      "import": "./dist/cli.mjs"
    }
  },
  "bin": {
    "mdream-db": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "obuild",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:attw": "attw --pack .",
    "run": "node --env-file=.env ./dist/cli.mjs run",
    "db:generate": "node --env-file=.env drizzle-kit generate",
    "db:migrate": "node --env-file=.env drizzle-kit migrate",
    "db:studio": "node --env-file=.env drizzle-kit studio",
    "prepack": "pnpm run build"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "catalog:",
    "@clack/prompts": "catalog:",
    "@libsql/client": "catalog:",
    "@mdream/crawl": "workspace:*",
    "better-sqlite3": "catalog:",
    "drizzle-orm": "catalog:",
    "pathe": "catalog:",
    "ufo": "catalog:",
    "unstorage": "catalog:"
  },
  "devDependencies": {
    "@types/better-sqlite3": "catalog:",
    "drizzle-kit": "catalog:"
  }
}
