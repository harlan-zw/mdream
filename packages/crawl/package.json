{
  "name": "mdream-crawl",
  "type": "module",
  "version": "0.5.0",
  "packageManager": "pnpm@10.12.4",
  "description": "Multi-page website crawler that generates comprehensive llms.txt files by following internal links and processing entire websites using mdream HTML-to-Markdown conversion.",
  "author": {
    "name": "Harlan Wilton",
    "email": "harlan@harlanzw.com",
    "url": "https://harlanzw.com/"
  },
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "default": "./dist/index.mjs"
    },
    "./cli": {
      "types": "./dist/cli.d.mts",
      "import": {
        "types": "./dist/cli.d.mts",
        "default": "./dist/cli.mjs"
      },
      "default": "./dist/cli.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": "./bin/mdream-crawl.mjs",
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "obuild",
    "typecheck": "tsc --noEmit",
    "dev:prepare": "obuild --stub",
    "test": "vitest test",
    "test:attw": "attw --pack"
  },
  "peerDependencies": {
    "playwright": "^1.53.2"
  },
  "peerDependenciesMeta": {
    "playwright": {
      "optional": true
    }
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "crawlee": "^3.13.9",
    "mdream": "workspace:*",
    "minimatch": "^10.0.3",
    "nypm": "^0.6.0"
  }
}
