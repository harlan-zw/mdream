{
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.18.2",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/harlan-zw/mdream"
  },
  "scripts": {
    "build": "pnpm run -r build",
    "typecheck": "pnpm run -r typecheck",
    "test": "pnpm exec playwright install && vitest test",
    "release": "pnpm build && bumpp --output=CHANGELOG.md packages/*/package.json",
    "test:attw": "pnpm -r --parallel --filter=./packages/** run test:attw"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@arethetypeswrong/cli": "^0.18.2",
    "@types/node": "^24.7.2",
    "@vitest/browser": "^3.2.4",
    "bumpp": "^10.3.1",
    "crawlee": "^3.15.1",
    "eslint": "^9.37.0",
    "llm-cost": "^1.0.5",
    "obuild": "^0.2.1",
    "playwright": "^1.56.0",
    "typescript": "5.9.3",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@latest"
    },
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@tailwindcss/oxide",
      "better-sqlite3",
      "esbuild",
      "maplibre-gl",
      "sharp",
      "vue-demi",
      "workerd"
    ]
  }
}
