{
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.24.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/harlan-zw/mdream"
  },
  "scripts": {
    "build": "pnpm run -r build",
    "typecheck": "pnpm run -r typecheck",
    "test": "pnpm exec playwright install && vitest test",
    "release": "pnpm build && bumpp --output=CHANGELOG.md packages/*/package.json",
    "test:attw": "pnpm -r --parallel --filter=./packages/** run test:attw"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@arethetypeswrong/cli": "^0.18.2",
    "@built-in-ai/transformers-js": "^0.3.3",
    "@types/node": "^24.10.1",
    "@vitest/browser": "^4.0.14",
    "ai": "^5.0.104",
    "bumpp": "^10.3.2",
    "crawlee": "^3.15.3",
    "eslint": "^9.39.1",
    "llm-cost": "^1.0.5",
    "obuild": "^0.4.3",
    "playwright": "^1.57.0",
    "typescript": "5.9.3",
    "vitest": "^4.0.14"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@latest"
    },
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@tailwindcss/oxide",
      "better-sqlite3",
      "esbuild",
      "maplibre-gl",
      "sharp",
      "vue-demi",
      "workerd"
    ]
  }
}
